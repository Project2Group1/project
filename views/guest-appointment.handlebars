<section class="contact container">
  <h1 class="title has-text-centered has-text-info">Make an Appointment</h1>
  <div class="inner-content">
    <form class="guest-form">
    <h3 class="subtitle">Owner Information</h3>
    
      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Name</label>
          </div>
          <div class="field-body">
              <div class="field">       
                  <div class="control is-expanded">
                      <input class="input" type="text" id="firstName-contact" required>
                  </div>
                  <p class="help">First</p>
              </div>

              <div class="field">
                  <div class="control is-expanded">
                      <input class="input" type="text" id="lastName-contact" required>
                  </div>
                  <p class="help">Last</p>
              </div>
          </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Email</label>
          </div>
          <div class="field-body">
              <div class="field">
                  <div class="control">
                      <input class="input" type="email" id="email-contact" required>
                  </div>
              </div>
          </div>
      </div>

      <h3 class="subtitle">Pet Information</h3>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Pet's Name</label>
          </div>
          <div class="field-body">
              <div class="field">
                  <div class="control">
                      <input class="input" type="text" id="petName-contact" required>
                  </div>
              </div>
          </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Species</label>
          </div>
          <div class="field-body">
              <div class="field">
                  <div class="control">
                      <input class="input" type="text" id="species-contact" required>
                  </div>
              </div>
          </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Breed</label>
          </div>
          <div class="field-body">
              <div class="field">
                  <div class="control">
                      <input class="input" type="text" id="breed-contact">
                  </div>
              </div>
          </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Birthday</label>
          </div>
          <div class="field-body">
              <div class="field">
                  <div class="control">
                      <input class="input" type="date" id="birthday-contact">
                  </div>
                  <p class="help">Please enter your pet's approximate birthdate</p>
              </div>
          </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Sex</label>
          </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <label class="radio">
                <input type="radio" name="client" id="sex-contact" checked>
                Male
              </label>
              <label class="radio">
                <input type="radio" name="client" id="sex-contact">
                Female
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Allergies</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <textarea class="textarea" id="allergies-contact"></textarea>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Has your pet been spayed/neutered?</label>
          </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <label class="radio">
                <input type="radio" name="client" id="spayNeutered-contact">
                Yes
              </label>
              <label class="radio">
                <input type="radio" name="client" id="spayNeutered-contact" checked>
                No
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
          <div class="field-label is-normal">
              <label class="label">Has your pet been vaccinated?</label>
          </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <label class="radio">
                <input type="radio" name="client" id="vaccinated-contact">
                Yes
              </label>
              <label class="radio">
                <input type="radio" name="client" id="vaccinated-contact" checked >
                No
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">What is the reason for your visit?</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <textarea class="textarea" id="concern-contact"></textarea>
              <!-- cannot be null -->
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <button class="button is-info mb-4" type="submit">
                Submit
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<script src="/js/appointment.js"></script>
<section class="contact container pt-3">
  <div class="hero">
    <div class="row-full title">Make an Appointment</div>
  </div>
  <div class="page-content">
    <div class="inner-content">
      
<h2 class="is-size-4 is-italic pt-4">Owner Information:</h2>

<form class="guest-form">
<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Name</label>
    </div>
    <div class="field-body">
        <div class="field">       
            <div class="control is-expanded">
                <input class="input" type="text" id="firstName-contact" required>
            </div>
            <p class="help">First</p>
        </div>

        <div class="field">
            <div class="control is-expanded">
                <input class="input" type="text" id="lastName-contact" required>
            </div>
            <p class="help">Last</p>
        </div>
    </div>
</div>

<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Email</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="email" id="email-contact" required>
            </div>
        </div>
    </div>
</div>

<h3 class="is-size-4 is-italic">Pet Information:</h3>
<!-- Name, species, breed, vaccination status, spayed status, birthday, sex -->

<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Pet's Name</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="text" id="petName-contact" required>
            </div>
        </div>
    </div>
</div>

<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Species</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="text" id="species-contact" required>
            </div>
        </div>
    </div>
</div>

<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Breed</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="text" id="breed-contact">
            </div>
        </div>
    </div>
</div>

<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Birthday</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="text" id="birthday-contact" placeholder="YYYY-MM-DD">
                <!-- Datepicker? -->
            </div>
            <p class="help">Please enter your pet's approximate birthdate</p>
        </div>
    </div>
</div>

<div class="field">
    <div class="field-label has-text-left">
        <label class="label">Sex</label>
    </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <label class="radio">
          <input type="radio" name="client" id="sex-contact" checked>
          Male
        </label>
        <label class="radio">
          <input type="radio" name="client" id="sex-contact">
          Female
        </label>
      </div>
    </div>
  </div>
</div>

<div class="field">
  <div class="field-label is-norma has-text-left">
    <label class="label">Allergies</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <textarea class="textarea" id="allergies-contact"></textarea>
      </div>
    </div>
  </div>
</div>

<div class="field">
    <div class="field-label has-text-left">
        <label class="label">Has your pet been spayed/neutered?</label>
    </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <label class="radio">
          <input type="radio" name="client" id="spayNeutered-contact">
          Yes
        </label>
        <label class="radio">
          <input type="radio" name="client" id="spayNeutered-contact" checked>
          No
        </label>
      </div>
    </div>
  </div>
</div>

<div class="field">
    <div class="field-label is-normal has-text-left">
        <label class="label">Has your pet been vaccinated?</label>
    </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <label class="radio">
          <input type="radio" name="client" id="vaccinated-contact">
          Yes
        </label>
        <label class="radio">
          <input type="radio" name="client" id="vaccinated-contact" checked >
          No
        </label>
      </div>
    </div>
  </div>
</div>

<div class="field">
  <div class="field-label is-normal has-text-left">
    <label class="label">What is the reason for your visit?</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <textarea class="textarea" id="concern-contact"></textarea>
        <!-- cannot be null -->
      </div>
    </div>
  </div>
</div>

<div class="field">
  <div class="field-label">
    <!-- Left empty for spacing -->
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <button class="button is-primary" type="submit">
          Submit
        </button>
      </div>
    </div>
  </div>
</div>
</form>
    </div>
  </div>
</section>

<script src="/js/appointment.js"></script>
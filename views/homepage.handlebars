<section class="hero is-primary is-bold">
	<div class="hero-body">
		<div class="container">
			<div class="columns is-vcentered">
				<div class="column">
					<h2 class="title is-2">Welcome to Vetset Go</h2>
					<h3 class="subtitle is-3">Your trusted source for all your pet care needs</h3>
					{{#if loggedIn}}
					<a href="/client-appointment" class="button">Book Now</a>
					{{else}}
					<a href="/appointment" class="button">Book Now</a>
					{{/if}}
				</div>
				<div class="column is-narrow">
					<img src="https://via.placeholder.com/400x250" alt="Pet image">
				</div>
			</div>
		</div>
	</div>
</section>

